{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "jsx": "react",
    "lib": [
      "DOM",
      "ES7"
    ],
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./dist/",
    "paths": {
      "@actions*": ["src/actions*"],
      "@components*": ["src/components*"],
      "@config*": ["config*"],
      "@constants*": ["src/constants*"],
      "@lib*": ["src/lib*"],
      "@middlewares*": ["src/middlewares*"],
      "@reducers*": ["src/reducers*"],
      "@src*": ["src*"]
    },
    "sourceMap": true,
    "target": "es6",
    "types": [
      "node",
      "jest"
    ]
  }
}
